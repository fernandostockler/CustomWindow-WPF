<cw:CWindow
    x:Class="CustomWindow_WPF.SampleApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cw="clr-namespace:CustomWindow_WPF;assembly=CustomWindow-WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomWindow_WPF.SampleApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="customWindow"
    Width="800"
    Title="Custom window"
    Height="450"
    Background="Silver"
    BorderThickness="0"
    Icon="/Death Star - 1st (2015_09_19 07_11_09 UTC).ico"
    mc:Ignorable="d" TitleBarHeight="46">
    <cw:CWindow.IconArea>
        <Image Margin="3" Source="{Binding Icon, ElementName=customWindow}" />
    </cw:CWindow.IconArea>
    <Grid Background="Crimson"></Grid>
</cw:CWindow>
