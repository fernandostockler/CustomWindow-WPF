<cw:CustomWindow
    x:Class="CustomWindow_WPF.SampleApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cw="clr-namespace:CustomWindow_WPF;assembly=CustomWindow-WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomWindow_WPF.SampleApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="customWindow"
    Title="Custom window"
    Width="800"
    Height="450"
    Background="Silver"
    BorderThickness="0"
    Icon="/Death Star.ico"
    TitleBarHeight="46"
    mc:Ignorable="d">
    <cw:CustomWindow.TitleBar>
        <Image Margin="3" Source="{Binding Icon, ElementName=customWindow}" />
    </cw:CustomWindow.TitleBar>
    <Grid Background="Crimson" />
</cw:CustomWindow>
