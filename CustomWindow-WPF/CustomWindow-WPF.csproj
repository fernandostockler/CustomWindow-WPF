<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>CustomWindow_WPF</RootNamespace>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>fernandostockler</Authors>
    <Description>It is a window that allows customization of the non-client area, has a kiosk mode and has a mechanism for displaying modal content.</Description>
    <PackageTags>wpf;custom-window;kiosk-window;modal-window</PackageTags>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>beaker_114x128.png</PackageIcon>
    <RepositoryUrl>https://github.com/fernandostockler/CustomWindow-WPF</RepositoryUrl>
    <Summary>It is a window that allows customization of the non-client area, has a kiosk mode and has a mechanism for displaying modal content</Summary>
    <Title>CustomWindow-WPF</Title>

  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <None Include="beaker_114x128.png" Pack="true" PackagePath="\" />
    <None Remove="Images\CustomWindow v1 Customizable area in orange.png" />
    <None Remove="Images\CustomWindow v1 CustomWindow gray sample1.png" />
    <None Remove="Images\CustomWindow v1 CustomWindow sample1.png" />
    <None Remove="Images\CustomWindow v1 CustomWindow search xaml.png" />
    <None Remove="Images\CustomWindow v1 CustomWindow search.png" />
    <None Remove="ReadMe.md" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ReadMe.md" >
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\CustomWindow v1 Customizable area in orange.png" />
    <Resource Include="Images\CustomWindow v1 CustomWindow gray sample1.png" />
    <Resource Include="Images\CustomWindow v1 CustomWindow sample1.png" />
    <Resource Include="Images\CustomWindow v1 CustomWindow search xaml.png" />
    <Resource Include="Images\CustomWindow v1 CustomWindow search.png" />
  </ItemGroup>

</Project>
